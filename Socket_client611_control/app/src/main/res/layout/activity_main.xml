<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="1000dp"
    tools:context="com.wss.socket_client.MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="密码:"
        android:textSize="20dp"
        android:textStyle="bold"

        app:layout_constraintLeft_toLeftOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="179dp"
        android:text="SSID:"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="186dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="74dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="192.168.4.1"
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/editText2"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="100dp"
        android:layout_height="42dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="5000"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/editText"
        app:layout_constraintLeft_toRightOf="@+id/editText"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/editText"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button_conn"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:background="@android:color/holo_blue_dark"
        android:text="连接服务器"
        app:layout_constraintBottom_toBottomOf="@+id/button_set"
        app:layout_constraintLeft_toLeftOf="@+id/button_wifi"
        app:layout_constraintTop_toTopOf="@+id/button_set"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ip:"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/textView2"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="port:"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/textView6"
        android:layout_marginTop="27dp"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Button
        android:id="@+id/button_stop"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:layout_marginTop="557dp"
        android:layout_weight="1"
        android:background="@android:color/holo_blue_dark"
        android:text="暂停"
        app:layout_constraintLeft_toRightOf="@+id/button_down"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText_time"
        android:layout_width="120dp"
        android:layout_height="44dp"
        android:layout_marginTop="430dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="5-240"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/button_time"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/editText_psd"
        android:layout_width="160dp"
        android:layout_height="43dp"
        android:layout_marginTop="9dp"
        android:ems="10"
        android:hint="请输入密码"
        android:inputType="textPersonName"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintLeft_toLeftOf="@+id/editText_ssid"
        app:layout_constraintTop_toBottomOf="@+id/editText_ssid"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/editText_ssid"
        android:layout_width="160dp"
        android:layout_height="43dp"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="168dp"
        android:hint="输入连接的wifi名"

        android:inputType="textPersonName"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_id"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:background="@android:color/holo_blue_dark"
        android:text="配置设备ID"
        app:layout_constraintBottom_toBottomOf="@+id/spinner1"
        app:layout_constraintLeft_toLeftOf="@+id/button_time"
        app:layout_constraintTop_toTopOf="@+id/spinner1"
        app:layout_constraintVertical_bias="0.555" />

    <Button
        android:id="@+id/button_down"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:layout_marginTop="557dp"
        android:layout_weight="1"
        android:background="@android:color/holo_blue_dark"
        android:text="关闭"
        app:layout_constraintLeft_toRightOf="@+id/button_up"
        app:layout_constraintRight_toLeftOf="@+id/button_stop"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText_port"
        android:layout_width="160dp"
        android:layout_height="43dp"
        android:ems="10"
        android:hint="5000"
        android:inputType="textPersonName"
        android:textSize="16dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView5"
        app:layout_constraintLeft_toLeftOf="@+id/editText_ip" />

    <Button
        android:id="@+id/button_udp"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:background="@android:color/holo_blue_dark"
        android:text="UDP"
        app:layout_constraintBottom_toBottomOf="@+id/button_tcp"
        app:layout_constraintLeft_toRightOf="@+id/button_tcp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button_tcp"
        app:layout_constraintVertical_bias="0.0" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="125dp"
        android:layout_height="39dp"
        android:layout_marginTop="374dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/editText_time" />

    <Button
        android:id="@+id/button_tcp"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:layout_marginTop="496dp"
        android:background="@android:color/holo_blue_dark"
        android:text="TCP"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/button_udp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_server"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="281dp"
        android:background="@android:color/holo_blue_dark"
        android:text="配置服务器"
        app:layout_constraintLeft_toLeftOf="@+id/button_id"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_wifi"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="203dp"
        android:background="@android:color/holo_blue_dark"
        android:text="配置wifi"
        app:layout_constraintLeft_toLeftOf="@+id/button_server"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_set"
        android:layout_width="212dp"
        android:layout_height="48dp"
        android:layout_marginTop="116dp"
        android:background="@android:color/holo_blue_dark"
        android:text="配置完成"
        app:layout_constraintHorizontal_bias="0.673"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/button_conn"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText_ip"
        android:layout_width="160dp"
        android:layout_height="43dp"
        android:hint="192.168.8.169"
        android:inputType="textPersonName"
        android:textSize="16dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView6"
        app:layout_constraintLeft_toLeftOf="@+id/editText_psd" />

    <Button
        android:id="@+id/button_up"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:layout_marginTop="557dp"
        android:layout_weight="1"
        android:background="@android:color/holo_blue_dark"
        android:text="开启"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/button_down"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_time"
        android:layout_width="109dp"
        android:layout_height="48dp"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp"
        android:background="@android:color/holo_blue_dark"
        android:text="配置行程时间"
        app:layout_constraintBottom_toBottomOf="@+id/editText_time"
        app:layout_constraintLeft_toRightOf="@+id/editText_time"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/editText_time"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="设备配置"
        app:layout_constraintRight_toLeftOf="@+id/btn_control"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/textView4" />

    <Button
        android:id="@+id/btn_control"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="设备控制"
        app:layout_constraintBottom_toBottomOf="@+id/btn_set"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btn_set" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="南通华建"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="24dp"
        app:layout_constraintTop_toTopOf="@+id/btn_set"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btn_set"
        app:layout_constraintBottom_toBottomOf="@+id/btn_set" />

</android.support.constraint.ConstraintLayout>
