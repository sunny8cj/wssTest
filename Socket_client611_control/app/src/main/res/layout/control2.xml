<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:menu="控制窗户"
    tools:context=".control">


    <Button
        android:id="@+id/btn_set2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设备配置"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        app:layout_constraintRight_toLeftOf="@+id/btn_control2"
        app:layout_constraintLeft_toRightOf="@+id/textView8" />

    <Button
        android:id="@+id/btn_control2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设备控制"
        app:layout_constraintLeft_toRightOf="@+id/btn_set2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintBottom_toBottomOf="@+id/btn_set2"
        android:layout_marginTop="5dp" />

    <EditText
        android:id="@+id/edt_ip"
        android:layout_width="186dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="116dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="192.168.1.1"
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="30dp" />

    <EditText
        android:id="@+id/edt_port"
        android:layout_width="100dp"
        android:layout_height="42dp"
        android:layout_marginTop="178dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="8899"
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="@+id/edt_ip"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_conn"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:background="@android:color/holo_blue_dark"
        android:text="连接服务器"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="172dp"
        android:layout_marginLeft="254dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="254dp" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="120dp"
        android:layout_height="44dp"
        app:layout_constraintHorizontal_bias="0.694"
        app:layout_constraintLeft_toRightOf="@+id/spinner"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/spinner"
        app:layout_constraintBottom_toBottomOf="@+id/spinner"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView_id"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginTop="311dp"
        android:text="设备id选择"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/spinner2" />

    <Button
        android:id="@+id/button_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开"
        app:layout_constraintRight_toLeftOf="@+id/button_close"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="448dp" />

    <Button
        android:id="@+id/button_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="关"
        app:layout_constraintBottom_toBottomOf="@+id/button_open"
        app:layout_constraintTop_toTopOf="@+id/button_open"
        app:layout_constraintRight_toLeftOf="@+id/button_stop"
        app:layout_constraintLeft_toRightOf="@+id/button_open"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="暂停"
        app:layout_constraintBottom_toBottomOf="@+id/button_close"
        app:layout_constraintTop_toTopOf="@+id/button_close"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/button_close"
        app:layout_constraintVertical_bias="0.0" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="120dp"
        android:layout_height="44dp"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="361dp"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="37dp" />

    <TextView
        android:id="@+id/textView_type"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="311dp"
        android:text="设备类型选择"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="37dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="南通华建"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="24dp"
        app:layout_constraintRight_toLeftOf="@+id/btn_set2"
        app:layout_constraintBottom_toBottomOf="@+id/btn_set2"
        app:layout_constraintTop_toTopOf="@+id/btn_set2"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>